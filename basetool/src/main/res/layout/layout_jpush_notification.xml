<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="12dp"
    android:paddingRight="15dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/iv_download"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_toEndOf="@id/iv_download"
        android:layout_toRightOf="@id/iv_download"
        android:text="@string/app_name"
        android:textColor="@color/gray4" />


    <TextView
        android:id="@+id/descTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTxt"
        android:layout_alignLeft="@id/titleTxt"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
        android:textColor="@color/gray4" />
</RelativeLayout>