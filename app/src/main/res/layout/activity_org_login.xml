<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/topTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="114dp"
        android:includeFontPadding="false"
        android:text="登录"
        android:textColor="@color/gray1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topTxt"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/accountTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:singleLine="true"
            android:text="15072236776"
            android:textColor="@color/gray1"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:id="@+id/clearImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:src="@mipmap/ic_cancel_white_gray"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_account"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="40dp"
        android:background="#ffdddddd" />

    <LinearLayout
        android:id="@+id/ll_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pwdTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text="123456"
            android:textColor="@color/gray1"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/font_normal" />

        <ImageView
            android:id="@+id/visibleImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:src="@mipmap/ic_pwd_show" />

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_psw"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="40dp"
        android:background="#ffdddddd" />

    <TextView
        android:id="@+id/forgetTxt"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@id/line2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="忘记密码"
        android:textColor="#19ADA9"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/loginTxt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/forgetTxt"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_green_gradient"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="登 录"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginTxt"
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录代表同意"
            android:textColor="#ff333333"
            android:visibility="gone"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/protocolLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="用户协议"
            android:textColor="#19ADA9"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/privateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:padding="10dp"
            android:textColor="#19ADA9"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>